<!-- Validation failure messages -->

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit User #<%= @user.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_user/<%= @user.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name_first -->
          <div class="form-group">
            <label for="name_first" class="col-sm-2 control-label">
              Name first
            </label>
            <div class="col-sm-10">
              <textarea id="name_first" name="name_first" placeholder="Name first" class="form-control" rows="3"><%= @user.name_first %></textarea>
            </div>
          </div>

          <!-- Label and input for name_last -->
          <div class="form-group">
            <label for="name_last" class="col-sm-2 control-label">
              Name last
            </label>
            <div class="col-sm-10">
              <textarea id="name_last" name="name_last" placeholder="Name last" class="form-control" rows="3"><%= @user.name_last %></textarea>
            </div>
          </div>

          <!-- Label and input for email -->
          <div class="form-group">
            <label for="email" class="col-sm-2 control-label">
              Email
            </label>
            <div class="col-sm-10">
              <textarea id="email" name="email" placeholder="Email" class="form-control" rows="3"><%= @user.email %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update User
              </button>
              or
              <a href="/users/<%= @user.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
